{% extends 'base.panel.html.twig' %}
{% form_theme form 'defaults/bootstrap_5_horizontal_layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="card p-5 mb-4">
        <h1 class="display-4">{{ title }}</h1>
        <hr/>
        <div class="form-wrapper">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <a href="{{ path(back_link, {'projectId' : app.request.attributes.get('projectId'), 'taskId' : app.request.attributes.get('taskId')}) }}" class="btn bg-gradient-danger mt-4 mb-0">Anuluj</a>
            <button type="submit" class="btn bg-gradient-dark mt-4 mb-0">Zapisz</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
