<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>Ô∏è</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('main') }}
        {{ encore_entry_link_tags('soft-design-system') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('soft-design-system-js') }}
    {% endblock %}
</head>
<body>
    <div class="container-fluid m-0">
        <div class="row">
            <div class="col-md-1 m-0 p-0">
                <div class="sticky-top">
                    {% include('left.panel.html.twig') %}
                </div>
            </div>
            <div class="col-md-11 m-0 ps-0">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-1 mt-2 sticky-top">
                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="left-menu-container d-flex flex-column">
                                        {% include('actions.html.twig') %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 mt-2">
                            <div class="card p-5">
                                {% block body %}

                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
