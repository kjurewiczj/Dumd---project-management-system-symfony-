<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/DumdLogo.png') }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('main') }}
        {{ encore_entry_link_tags('soft-design-system') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('soft-design-system-js') }}
    {% endblock %}
</head>
<body>
    <div class="container-fluid m-0">
        <div class="row">
            <div class="col-md-1 m-0 p-0">
                <div class="sticky-top">
                    {% include('left.panel.html.twig') %}
                </div>
            </div>
            <div class="col-md-11 m-0 ps-0">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-1 mt-2">
                            <div class="row sticky-top">
                                <div class="col-md-6">
                                    <div class="left-menu-container d-flex flex-column">
                                        <div class="dropdown">
                                            <button class="btn btn-icon-only btn-2 bg-gradient-dark" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fa-solid fa-user"></i>
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <li><a class="dropdown-item" href="#">{{ app.user.email }}</a></li>
                                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">Wyloguj</a></li>
                                            </ul>
                                        </div>
                                        <div class="dropdown">
                                            <button class="btn btn-icon-only btn-2 bg-gradient-dark" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fa-solid fa-gear"></i>
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="left-menu-container d-flex flex-column">
                                        {% include('actions.html.twig') %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-11 mt-2">
                            <div class="card p-5">
                                {% block body %}

                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
