{% extends 'base.panel.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-borderless align-items-center mb-0 text-center">
            <thead>
            <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Nazwa</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Opis</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Projekt</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Czas</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Przepracowany
                    czas
                </th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Czas rozpoczęcia
                </th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Czas zakończenia
                </th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Progres</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Przypisany do</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Priorytet</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Utoworzony</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <h6 class="mb-0 text-xs">#{{ task.id }}</h6>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.name }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.description }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.project.name }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.estimatedTime }}h</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.workedTime }}h</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.startDate|date('Y-m-d') }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.endDate|date('Y-m-d') }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.progress }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.userAssigned.email ?? 'Brak użytkownika' }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.statusName ?? 'Brak' }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.priorityName ?? 'Brak' }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <p class="mb-0 text-xs font-weight-bold">{{ task.createdAt|date('Y-m-d') }}</p>
                        </div>
                    </div>
                </td>
                <td class="align-middle text-start">
                    <div class="d-flex px-2 justify-content-center">
                        <div class="my-auto">
                            <a href="{{ path('app_task_update', {'projectId' : task.project.id, 'taskId' : task.id}) }}"
                               class="btn btn-outline-success mb-0">Aktualizuj zadanie</a>
                        </div>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <h1 class="card-title text-darker mt-5">Komentarze</h1>
    <hr/>
    {{ form_start(commentForm) }}
    {{ form_widget(commentForm) }}
    <button type="submit" class="btn bg-gradient-dark mt-4 mb-0">Dodaj</button>
    {{ form_end(commentForm) }}

    {% for comment in comments %}
        <div class="card bg-gradient-default mt-3 mb-3  d-flex justify-content-between flex-row">
            <div class="card-body">
                <blockquote class="blockquote text-white mb-0">
                    <p class="text-dark ms-3">{{ comment.content }}</p>
                    <footer class="blockquote-footer text-gradient text-info text-sm ms-3">{{ comment.userCreated.email }}
                        <cite title="Source Title">{{ comment.createdAt|date('Y-m-d H:i:s') }}</cite></footer>
                </blockquote>
            </div>
            <div class="card-body text-end d-flex align-items-center justify-content-end">
                <a href="{{ path('app_task_comment_delete', {'taskId' : task.id, 'projectId' : task.project.id, 'commentId' : comment.id}) }}"
                   class="btn btn-icon-only btn-3 btn-danger"><i class="fa-solid fa-trash"></i></a>
            </div>
        </div>
    {% endfor %}
    {{ knp_pagination_render(comments) }}
    {% include('modals/modals.html.twig') %}
{% endblock %}