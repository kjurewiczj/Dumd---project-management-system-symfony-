{% extends 'base.panel.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <a href="{{ path('app_task_update', {'projectId' : task.project.id, 'taskId' : task.id}) }}" class="btn bg-gradient-success">Aktualizacja zadania</a>
    {{ dump(task) }}
    <h1 class="card-title text-darker">Komentarze</h1>
    <hr/>
    {{ form_start(commentForm) }}
    {{ form_widget(commentForm) }}
    <button type="submit" class="btn bg-gradient-dark mt-4 mb-0">Dodaj</button>
    {{ form_end(commentForm) }}

    {% for comment in comments %}
        <div class="card bg-gradient-default mt-2 mb-2  d-flex justify-content-between flex-row">
            <div class="card-body">
                <blockquote class="blockquote text-white mb-0">
                    <p class="text-dark ms-3">{{ comment.content }}</p>
                    <footer class="blockquote-footer text-gradient text-info text-sm ms-3">{{ comment.userCreated.email }} <cite title="Source Title">{{ comment.createdAt|date('Y-m-d H:i:s') }}</cite></footer>
                </blockquote>
            </div>
            <div class="card-body text-end d-flex align-items-center justify-content-end">
                <a href="{{ path('app_task_comment_delete', {'taskId' : task.id, 'projectId' : task.project.id, 'commentId' : comment.id}) }}" class="btn btn-icon-only btn-2 btn-danger"><i class="fa-solid fa-trash"></i></a>
            </div>
        </div>
    {% endfor %}
    {{ knp_pagination_render(comments) }}
    {% include('modals/modals.html.twig') %}
{% endblock %}