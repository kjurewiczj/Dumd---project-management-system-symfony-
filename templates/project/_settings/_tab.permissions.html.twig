<div class="row">
    <div class="col-md-6">
        <h5>Uprawnienia</h5>
        <hr>
        <ul class="list-unstyled assigned-users-list">
            {% for user in assignedUsers %}
                <li class="mb-3">
                    {{ user.user.email }}
                    <a href="{{ path('app_permissions_update', {'projectId' : user.project.id, 'userId' : user.user.id}) }}" class="badge bg-info float-end border-0" >
                        <i class="fa-solid fa-arrows-rotate"></i>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>