{% extends 'base.panel.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h5 class="card-title text-secondary text-uppercase">Szczegóły</h5>
    
        <dl class="row">
            <div class="col">
                <div class="d-flex">
                    <dd class="col-sm-2 text-secondary">ID projektu</dt>
                    <dt class="col-sm-10 text-dark font-weight-bold">{{ project.id }}</dd>
                </div>
                <div class="d-flex">
                    <dd class="col-sm-2 text-secondary">Nazwa</dt>
                    <dt class="col-sm-10 text-dark font-weight-bold">{{ project.name }}</dd>
                </div>
            </div>
            <div class="col">
                <div class="d-flex">
                    <dd class="col-sm-2 text-secondary">Opis</dt>
                    <dt class="col-sm-10 text-dark font-weight-bold overflow-auto" style="max-height: 50px">{{ project.description }}</dd>
                </div>
                <div class="d-flex">
                    <dd class="col-sm-2 text-secondary">Stworzył</dt>
                    <dt class="col-sm-10 text-dark font-weight-bold">{{ project.userCreated.email }}</dd>
                </div>
            </div>
        </dl>
    
    <div class="card mt-5">
        <div class="table-responsive">
            <table class="table align-items-center mb-0 text-center">
                <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">#</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Nazwa</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Priorytet</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Postęp</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Szacowany czas</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Przepracowany czas</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for task in pagination %}
                    <tr>
                        <td class="align-middle text-start">
                            <div class="d-flex px-2 justify-content-center">
                                <div class="my-auto">
                                    <h6 class="mb-0 text-xs">#{{ task.id }}</h6>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-start">
                            <div class="d-flex px-2 justify-content-center">
                                <div class="my-auto">
                                    <p class="mb-0 text-xs font-weight-bold">{{ task.name }}</p>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-start">
                            <div class="d-flex px-2 justify-content-center">
                                <div class="my-auto">
                                    <p class="mb-0 text-xs font-weight-bold">{{ task.priorityName ?? 'Brak' }}</p>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-start">
                            <div class="d-flex px-2 justify-content-center">
                                <div class="my-auto">
                                    <p class="mb-0 text-xs font-weight-bold">{{ task.statusName ?? 'Brak' }}</p>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-start">
                            <div class="d-flex align-items-center">
                                <div class="progress-wrapper w-100 d-flex align-items-center gap-1">
                                    <div class="progress-info">
                                        <div class="progress-percentage">
                                            <span class="text-xs font-weight-bold">{{ task.progress ?? 0 }}%</span>
                                        </div>
                                    </div>
                                    <div class="progress w-100">
                                        <div class="progress-bar bg-info" role="progressbar" aria-valuenow="{{ task.progress }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ task.progress }}%;"></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-start">
                            <div class="d-flex px-2 justify-content-center">
                                <div class="my-auto">
                                    <p class="mb-0 text-xs font-weight-bold">{{ task.estimatedTime }}h</p>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-start">
                            <div class="d-flex px-2 justify-content-center">
                                <div class="my-auto">
                                    <p class="mb-0 text-xs font-weight-bold">{{ task.workedTime }}h</p>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-start">
                        <div class="d-flex px-2 justify-content-center">
                                <div class="my-auto">
                                    <a class="btn btn-outline-dark mb-0" href="{{ path('app_task_show', {'projectId' : task.project.id, 'taskId' : task.id}) }}">Podgląd</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {{ knp_pagination_render(pagination) }}
    </div>
    {% include('modals/modals.html.twig') %}
{% endblock %}
